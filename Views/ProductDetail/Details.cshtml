@model Projet_E_commerce.Models.Product

@{
    ViewData["Title"] = "Détails du produit";
}

<h1>Détails du produit</h1>

<div>
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:300px; max-height:300px;" />
</div>

<div>
    <h2>@Model.Name</h2>
    <p><strong>Prix :</strong> @Model.Price.ToString("C")</p>
    <p><strong>Catégorie :</strong> @Model.Category</p>
    <p><strong>Description :</strong> @Model.Description</p>
</div>

<hr />

<h3>Ajouter au panier</h3>
<form method="post" asp-controller="ProductDetail" asp-action="AddToPanier">
    <input type="hidden" name="productId" value="@Model.Id" />
    <label for="quantity">Quantité :</label>
    <input type="number" id="quantity" name="quantity" value="1" min="1" required />
    <button type="submit">Ajouter au panier</button>
</form>

<a href="/Store">Retour à la liste des produits</a>
